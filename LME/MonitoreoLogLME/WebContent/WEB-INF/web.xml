<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>MonitoreoLogLME</display-name>
	<servlet>
	    <servlet-name>LoadOnStartupQuartz</servlet-name>
	    <servlet-class>cl.laaraucana.monitoreoLogLME.jcrontab.InitQuartz</servlet-class>
		<init-param>
			<param-name>log4j-init-file</param-name>
			<param-value>WEB-INF/log4j.properties</param-value>
		</init-param>
	    <load-on-startup>10</load-on-startup>
  	</servlet>
  	<servlet>
		<servlet-name>runMonitoreo</servlet-name>
		<servlet-class>cl.laaraucana.monitoreoLogLME.servlet.MonitoreoRun</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>runMonitoreo</servlet-name>
		<url-pattern>/runMonitoreo</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
</web-app>